[*]
charset=utf-8
end_of_line=lf
indent_size=2
indent_style=space
insert_final_newline=true
trim_trailing_whitespace = true

[*.{js,jsx,html}]
indent_style=space
indent_size=2

[{.babelrc,.stylelintrc,.eslintrc,.bootstraprc,*.json}]
indent_style=space
indent_size=2

[*.css]
indent_style=space
indent_size=4

[*.{sass,scss}]
indent_style=space
indent_size=2

[Makefile]
indent_style=tab
indent_size=4

[*.{md,markdown}]
trim_trailing_whitespace = false
